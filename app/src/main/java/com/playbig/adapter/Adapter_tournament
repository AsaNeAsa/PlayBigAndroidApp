        return viewHolder;
    }

    @Override
    public void onBindViewHolder(ViewHolder holder, int position) {

        holder.tv_time.setText(itemsData.get(position).getVMainDepartureTime());
        holder.tv_created_at.setText(itemsData.get(position).getCreated_at());
        holder.tv_route.setText(itemsData.get(position).getVMainDeparture() + " --> " + itemsData.get(position).getVMainArrival());
        holder.tv_user_name.setText(itemsData.get(position).getVFirstName() + " " + itemsData.get(position).getVLastName());
        holder.tv_price.setText(itemsData.get(position).getVMainDistance());
    }

    public static class ViewHolder extends RecyclerView.ViewHolder {

        public TextView tv_time, tv_route, tv_user_name, tv_price, tv_created_at;
        public RoundedImageView img_user_pro_pic;


        public ViewHolder(View itemLayoutView) {
            super(itemLayoutView);
            tv_time = (TextView) itemLayoutView.findViewById(R.id.tv_time);
            tv_route = (TextView) itemLayoutView.findViewById(R.id.tv_route);
            tv_user_name = (TextView) itemLayoutView.findViewById(R.id.tv_user_name);
